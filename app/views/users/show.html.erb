<section class="container grid">
    <article class="cards">
        <img class="cards__img" src=<%= @user.photo %> alt="user"/>
        <div class="cards__info grid">
            <h2 class="cards__title"><%= @user.name %></h2>
            <h4 class="cards__item__ra">Number of posts: <%= @user.posts_counter%></h4> 
        </div>   
    </article>   
    <p class="user-bio"><%= @user.bio %></p>
    
    <% @user.recent_posts.each do |post| %>
        <%= link_to user_post_path(@user.id, post.id) do %>
        <div class="cards__info">
            <h2 class="cards-title">Post : <%= post.title %> by <%= post.author.name %></h2>
            <p><%= post.text.first(50) %></p>
            <h4 class="cards__item__ra">Comments: <span><%= post.comments_counter || 0 %>, Likes: <%= post.likes_counter || 0 %></span></h4>
        </div>
        <% end %>       
    <% end %> 
    
    <div class="btn__holder">
        <button class="button">
        <%= link_to "See all posts", user_posts_path(@user), class:"text-button" %>
        </button>
    </div>
</section>
